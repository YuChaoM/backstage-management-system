<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuchao.managementsystem.mapper.UserMapper">

    <!--  这样查出的分页数据，一个用户有多个课程就有多条，但是后台会封装为一条，这样导致前台的分页不准,有bug，分页数据会导致选课信息也不全-->
    <resultMap id="pageUser" type="com.yuchao.managementsystem.entity.User">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="address" property="address"/>
        <result column="create_time" property="createTime"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="role" property="role"/>
        <collection property="courses" javaType="java.util.ArrayList"
                    ofType="com.yuchao.managementsystem.entity.Course">
            <result column="teacherCourseName" property="name"/>
            <result column="teacherCredit" property="credit"/>
        </collection>
        <collection property="stuCourses" javaType="java.util.ArrayList"
                    ofType="com.yuchao.managementsystem.entity.Course">
            <result column="stuCourseName" property="name"/>
            <result column="stuCredit" property="credit"/>
        </collection>
    </resultMap>
    <select id="fingPage" resultMap="pageUser">
        select sys_user.*, sc.name as stuCourseName, tc.name as teacherCourseName, tc.credit as teacherCredit,
        sc.credit as stuCredit from sys_user
        left join student_course
        on sys_user.id = student_course.student_id
        left join course sc
        on student_course.course_id = sc.id
        left join course tc
        on sys_user.id = tc.teacher_id
        <where>
            <if test="username != null and username != ''">
                and sys_user.username like concat('%', #{username} ,'%')
            </if>
            <if test="role != null and role != ''">
                and sys_user.role like concat('%', #{role} ,'%')
            </if>
            <if test="address != null and address != ''">
                and sys_user.address like concat('%', #{address} ,'%')
            </if>
        </where>
    </select>
    <select id="getAvatarUrlByNanme" resultType="java.lang.String">
        select avatar_url from sys_user
        <where>
            <if test="username != null">
                 username = #{username}
            </if>
        </where>
    </select>
    <select id="getAvatarUrlByEmail" resultType="java.lang.String">
        select avatar_url from sys_user
        <where>
            <if test="email != null">
                email = #{email}
            </if>
        </where>
    </select>
</mapper>
